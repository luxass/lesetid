{
  "publisher": "luxass",
  "name": "vscode-reading-time",
  "displayName": "Reading Time",
  "version": "0.1.0",
  "private": true,
  "description": "An extension that estimates the reading time of a markdown file.",
  "author": {
    "name": "Lucas Nørgård",
    "url": "https://luxass.dev",
    "email": "lucasnrgaard@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/lesetid",
    "directory": "packages/vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:reading-time.estimate"
  ],
  "contributes": {
    "commands": [
      {
        "command": "reading-time.estimate",
        "title": "Estimate Reading Time",
        "category": "Reading Time"
      }
    ],
    "configuration": {
      "title": "Reading Time",
      "properties": {
        "reading-time.wpm": {
          "type": "number",
          "default": 200,
          "description": "Words per minute"
        },
        "reading-time.cpm": {
          "type": "number",
          "default": 500,
          "description": "Characters per minute (used for chinese texts)"
        },
        "reading-time.files": {
          "type": "array",
          "default": [
            "markdown"
          ],
          "description": "Glob patterns for files to estimate reading time for"
        }
      }
    }
  },
  "browser": "./dist/web/extension.js",
  "scripts": {
    "vscode:prepublish": "tsup --minify",
    "build": "tsup",
    "dev": "tsup --watch",
    "browser": "vscode-test-web --extensionDevelopmentPath=. --folder-uri=vscode-vfs://github/luxass/luxass.dev",
    "web:serve": "npx serve --cors -l 5000",
    "web:tunnel": "npx localtunnel -p 5000",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lesetid": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@vscode/test-web": "^0.0.48",
    "@vscode/vsce": "^2.22.0"
  },
  "capabilities": {
    "virtualWorkspaces": true
  },
  "extensionKind": [
    "ui",
    "workspace"
  ]
}
