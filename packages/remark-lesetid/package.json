{
  "name": "remark-lesetid",
  "version": "2.0.0",
  "description": "A remark plugin to add reading time to your markdown files",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.15.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/remark-lesetid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/lesetid.git",
    "directory": "packages/remark-lesetid"
  },
  "bugs": {
    "url": "https://github.com/luxass/remark-lesetid/issues"
  },
  "keywords": [
    "remark-plugin",
    "read time",
    "reading time",
    "words per minute"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./astro": {
      "import": "./dist/astro.js",
      "require": "./dist/astro.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf dist node_modules"
  },
  "dependencies": {
    "lesetid": "workspace:*",
    "mdast-util-to-string": "catalog:remark-lesetid",
    "unist-util-visit": "catalog:remark-lesetid"
  },
  "devDependencies": {
    "@lesetid/tsconfig": "workspace:*",
    "@luxass/eslint-config": "catalog:linting",
    "@types/mdast": "catalog:remark-lesetid",
    "@types/node": "catalog:remark-lesetid",
    "eslint": "catalog:linting",
    "publint": "catalog:monorepo",
    "remark": "catalog:example",
    "tsdown": "catalog:monorepo",
    "typescript": "catalog:monorepo",
    "unified": "catalog:remark-lesetid",
    "vfile": "catalog:remark-lesetid",
    "volapyk": "catalog:monorepo"
  }
}
