{
  "name": "remark-lesetid",
  "version": "1.3.0",
  "description": "A remark plugin to add reading time to your markdown files",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.2.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/remark-lesetid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/lesetid.git",
    "directory": "packages/remark-lesetid"
  },
  "bugs": {
    "url": "https://github.com/luxass/remark-lesetid/issues"
  },
  "keywords": [
    "remark-plugin",
    "read time",
    "reading time",
    "words per minute"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./astro": {
      "import": {
        "types": "./dist/astro.d.ts",
        "default": "./dist/astro.mjs"
      },
      "require": {
        "types": "./dist/astro.d.cts",
        "default": "./dist/astro.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint . --report-unused-disable-directives",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf dist node_modules .turbo"
  },
  "dependencies": {
    "lesetid": "workspace:*",
    "mdast-util-to-string": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.14.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^18.19.68",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "unified": "^11.0.5",
    "vfile": "6.0.3"
  }
}
