{
  "name": "lesetid",
  "version": "2.0.0",
  "description": "A dead simple read time estimation",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/lesetid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/lesetid.git",
    "directory": "packages/lesetid"
  },
  "bugs": {
    "url": "https://github.com/luxass/lesetid/issues"
  },
  "keywords": [
    "read time",
    "reading time",
    "words per minute",
    "read",
    "time",
    "medium",
    "character count",
    "characters per minute"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./stream": {
      "import": "./dist/stream.js",
      "require": "./dist/stream.cjs"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf dist node_modules"
  },
  "devDependencies": {
    "@lesetid/tsconfig": "workspace:*",
    "@luxass/eslint-config": "catalog:linting",
    "@types/node": "catalog:lesetid",
    "eslint": "catalog:linting",
    "publint": "catalog:monorepo",
    "tsdown": "catalog:monorepo",
    "typescript": "catalog:monorepo",
    "volapyk": "catalog:monorepo"
  }
}
