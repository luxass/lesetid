{
  "name": "lesetid",
  "version": "1.2.0",
  "description": "A dead simple read time estimation",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "homepage": "https://github.com/luxass/lesetid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/lesetid.git",
    "directory": "packages/lesetid"
  },
  "bugs": {
    "url": "https://github.com/luxass/lesetid/issues"
  },
  "keywords": [
    "read time",
    "reading time",
    "words per minute",
    "read",
    "time",
    "medium",
    "character count",
    "characters per minute"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./stream": {
      "import": {
        "types": "./dist/stream.d.ts",
        "default": "./dist/stream.mjs"
      },
      "require": {
        "types": "./dist/stream.d.cts",
        "default": "./dist/stream.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.mjs"
      },
      "require": {
        "types": "./dist/utils.d.cts",
        "default": "./dist/utils.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint . --report-unused-disable-directives",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf dist node_modules .turbo"
  },
  "devDependencies": {
    "@luxass/eslint-config": "catalog:linting",
    "@types/node": "catalog:lesetid",
    "eslint": "catalog:linting",
    "typescript": "catalog:monorepo",
    "volapyk": "catalog:monorepo"
  }
}
