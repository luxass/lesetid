---
// TODO: How would i use the Link component here instead of a?
export interface Props {
  href?: string
  class?: string
}
const { href, class: clazz } = Astro.props;
const isInternalLink = href && (href.startsWith("/") || href.startsWith("#"));
const Component = href ? "a" : "div";

const props = href
  ? {
      href,
      target: isInternalLink ? undefined : "_blank",
      rel: isInternalLink ? undefined : "noopener noreferrer",
    }
  : {};
---

<Component
  {...props}
  class:list={[
    "h-full min-h-36 border border-transparent hover:(border-neutral-700) rounded p-4 text-neutral-800 dark:text-neutral-200",
    clazz,
  ]}
>
  <slot />
</Component>
