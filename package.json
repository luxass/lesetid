{
  "name": "lesetid-monorepo",
  "description": "Monorepo for the lesetid packages",
  "type": "module",
  "private": true,
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@8.12.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/lesetid",
  "repository": "https://github.com/luxass/lesetid",
  "bugs": {
    "url": "https://github.com/luxass/lesetid/issues"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.12.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "build": "turbo run build --filter=\"./packages/*\"",
    "build:examples": "turbo run build --filter=\"@lesetid-example/*\"",
    "dev:all": "turbo run dev",
    "dev": "turbo run dev --filter=\"./packages/*\"",
    "dev:examples": "turbo run dev --filter=\"@lesetid-example/*\"",
    "lint": "turbo run lint && manypkg check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && git clean -xdf node_modules"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@luxass/eslint-config": "^4.0.0-beta.16",
    "@manypkg/cli": "^0.21.1",
    "@types/node": "^18.16.19",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "turbo": "^1.11.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "manypkg": {
    "defaultBranch": "main"
  }
}
