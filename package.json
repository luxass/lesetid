{
  "name": "lesetid-monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "Monorepo for the lesetid packages",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/luxass/lesetid",
  "repository": "https://github.com/luxass/lesetid",
  "bugs": {
    "url": "https://github.com/luxass/lesetid/issues"
  },
  "workspaces": [
    "www",
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "build:pkgs": "turbo run build --filter=!@lesetid-example/*",
    "build:examples": "turbo run build --filter=@lesetid-example/*",
    "dev": "turbo run dev --concurrency=40 --parallel --filter=!@lesetid-example/*",
    "dev:all": "turbo run dev --concurrency=40 --parallel",
    "dev:examples": "turbo run dev --concurrency=40 --parallel --filter=@lesetid-example/*",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.0.0-beta.7",
    "@types/node": "^18.16.19",
    "eslint": "^8.54.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "tsup": "^8.0.1",
    "turbo": "^1.10.16",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  }
}
