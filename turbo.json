{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "build": {
      "outputs": [
        "dist/**",
        ".nuxt/dist/**",
        ".output/**",
        ".next/**",
        "!.next/cache/**",
        ".vercel/**",
        ".contentlayer/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputMode": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "lint": {
      "cache": true,
      "persistent": true,
      "outputMode": "new-only",
      "dependsOn": [
        "^topo",
        "^build"
      ]
    },
    "test": {
      "outputs": [],
      "dependsOn": [
        "build"
      ],
      "outputMode": "new-only"
    },
    "test:watch": {
      "cache": false,
      "outputMode": "new-only"
    },
    "typecheck": {
      "dependsOn": [
        "^topo",
        "^build"
      ],
      "outputMode": "new-only"
    }
  }
}
